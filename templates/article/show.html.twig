{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - Ada Lovelace{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1>{{ article.title }}</h1>
                    <!-- Post categories-->
                    {% if article.Category.name is defined %}
                        <a class="badge category" href="{{path('category_show', {'id': article.Category.id}) }}">{{ article.Category.name }}</a>
                    {% else %}
                        <div class="badge uncategorized" href="#!">Non catégorisé</div>
                    {% endif %}
                </header>
                <!-- Preview image figure-->
                <figure class="d-flex flex-column justify-content-center"><img class="img-fluid rounded" src="https://picsum.photos/900/400" alt="..."></figure>
                <!-- Post content-->
                <section class="mb-2">
                    <p>{{ article.content }}</p>
                </section>
                <div class="d-flex mb-5 mx-auto btn-zone">
                    <a class="btn btn-primary" href="{{ path('article_index') }}">Retour</a>
                    <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">Modifier cet article <i class="fa-solid fa-pen-to-square"></i></a>
                    <a class="btn btn-primary" href="{{ path('article_new') }}">Écrire un nouvel article <i class="fa-solid fa-plus"></i></a>
                    {{ include('article/_delete_form.html.twig') }}
                </div>
            </article>
        </div>
    </div>
</div>

{% endblock %}
