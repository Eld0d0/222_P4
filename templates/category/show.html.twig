{% extends 'base.html.twig' %}

{% block title %}{{category.name}} - Ada Lovelace{% endblock %}

{% block body %}
    <div class="container mt-5">
    <div class="row">
        <div class="col">
            <article>
                <!-- header-->
                <header class="mb-4">
                    <!-- Category title-->
                    <h1>{{ category.name }}</h1>
                </header>
                <!-- Category content-->
                <p>Articles de la catégorie "{{ category.name }}"</p>
                <section class="mb-2 category-articles">
                    {% if category.Articles is defined %}
                        {% for article in category.Articles %}
                            <a class="list-group-item list-group-item-action" href="{{ path('article_show', {'id': article.id}) }}"> {{ article.title }} </a>
                        {% endfor %}
                    {% endif %} 
                </section>
                <div class="d-flex my-5 btn-zone mx-auto">
                    <a class="btn btn-primary" href="{{ path('category_index') }}">Retour</a>
                    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Modifier cette catégorie <i class="fa-solid fa-pen-to-square"></i></a>
                    <a class="btn btn-primary" href="{{ path('category_new') }}">Créer une nouvelle catégorie <i class="fa-solid fa-plus"></i></a>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </article>
        </div>
    </div>
</div>

{% endblock %}
